// Project-local debug tasks
//
// For more documentation on how to configure debug tasks,
// see: https://zed.dev/docs/debugger
[
  {
    "label": "Python Active File",
    "adapter": "Debugpy",
    "program": "$ZED_FILE",
    "request": "launch"
  },
  {
    "label": "Launch Backend",
    "adapter": "Debugpy",
    "program": "main.py",
    "args": ["examples"],
    "request": "launch"
  },
  {
    "label": "Chrome with Debugger",
    "adapter": "JavaScript",
    "type": "chrome",
    "request": "launch",
    "url": "http://localhost:3000/",
    "webRoot": "$ZED_WORKTREE_ROOT/frontend/src",
    "console": "integratedTerminal",
    "skipFiles": ["<node_internals>/**"]
  },
  {
    "label": "Launch Frontend",
    "adapter": "JavaScript",
    "type": "chrome",
    "request": "launch",
    "url": "http://localhost:3000",
    "program": "$ZED_FILE",
    "webRoot": "${ZED_WORKTREE_ROOT}/frontend/src",
    "console": "integratedTerminal",
    "build": {
      "command": "bun",
      "args": ["run", "dev"],
      "cwd": "${ZED_WORKTREE_ROOT}/frontend"
    },
    "skipFiles": ["<node_internals>/**"]
  }
]
